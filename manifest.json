{
  "manifest_version": 3,
  "name": "調整さん Googleカレンダーエクスポーター",
  "version": "1.0.0",
  "description": "調整さんのイベントページで全員が◯の日付をGoogleカレンダーにエクスポートできます",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://chouseisan.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://chouseisan.com/s*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}

